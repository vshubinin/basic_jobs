<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!--configuration files-->
        <fileSet>
            <directory>src/assembly/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.yml</include>
            </includes>
        </fileSet>
        <!--jobs-->
        <fileSet>
            <directory>src/assembly/jobs</directory>
            <outputDirectory>jobs</outputDirectory>
            <includes>
                <include>*.txt</include>
                <include>*.jar</include>
                <include>*.java</include>
            </includes>
        </fileSet>
        <!--lib-->
        <fileSet>
            <directory>../easy-jobs-admin/target/dependency</directory>
            <outputDirectory>lib/admin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../easy-jobs-server/target/dependency</directory>
            <outputDirectory>lib/server</outputDirectory>
        </fileSet>
        <!--drivers-->
        <fileSet>
            <directory>../easy-jobs-h2/target/dependency</directory>
            <outputDirectory>drivers/h2</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../easy-jobs-mysql/target/dependency</directory>
            <outputDirectory>drivers/mysql</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../easy-jobs-admin/target/easy-jobs-admin-${project.version}.jar</source>
            <outputDirectory>lib/admin</outputDirectory>
        </file>
        <file>
            <source>../easy-jobs-server/target/easy-jobs-server-${project.version}.jar</source>
            <outputDirectory>lib/server</outputDirectory>
        </file>
        <file>
            <source>../easy-jobs-h2/target/easy-jobs-h2-${project.version}.jar</source>
            <outputDirectory>drivers/h2</outputDirectory>
        </file>
        <file>
            <source>../easy-jobs-mysql/target/easy-jobs-mysql-${project.version}.jar</source>
            <outputDirectory>drivers/mysql</outputDirectory>
        </file>
        <file>
            <source>../README.md</source>
        </file>
    </files>
</assembly>